{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "stack.yaml",
                ".stack.yaml",
                "cabal.config",
                "package.yaml",
                ".hie-bios",
                "BUILD.bazel"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {}
            }
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls-root",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "client": {
                    "snippetSupport": true
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "lisp": {
            "command": "cl-lsp",
            "filetypes": [
                "lisp"
            ]
        }
    },
    "coc.source.around.enable": false,
    "coc.source.buffer.enable": false,
    "rust-analyzer.serverPath": "/usr/local/bin/rust-analyzer",
    "python.formatting.provider": "black",
    "python.pythonPath": "python3"
}
